<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/articleN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="실시간 블붕이 ㅈ대따.."
            android:textStyle="bold"
            android:textSize="25sp">
        </TextView>
        <TextView
            android:id="@+id/articleA"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="김**"/>
        <android.widget.Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/danger"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:text="삭제"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_margin="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/articleC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동해물과백두산이마르고닳도록"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="댓글 0"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/comment_view"
                />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="200dp"
            android:layout_weight="1"
            android:hint="댓글을 입력해 주세요."
            android:background="@null"
            android:layout_height="65dp"/>
        <android.widget.Button
            android:id="@+id/commentButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:backgroundTint="#49BCFF"
            android:fontFamily="@font/notosanskrbold"
            android:stateListAnimator="@null"
            android:text="작성"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>